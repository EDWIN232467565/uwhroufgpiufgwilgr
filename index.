        function saveDatabase() {
            // Simular guardado de base de datos
            addNotification('success', 'Base de datos guardada', 'Los cambios en la base de datos han sido guardados.');
        }
        
        function clearDatabase() {
            if (confirm('¬øEst√° seguro de que desea limpiar toda la base de datos? Esta acci√≥n no se puede deshacer.')) {
                document.getElementById('databaseList').innerHTML = '<div style="text-align: center; color: rgba(255,255,255,0.6);">La base de datos est√° vac√≠a</div>';
                updateDatabaseStats();
                addNotification('warning', 'Base de datos limpiada', 'Todos los rostros han sido eliminados de la base de datos.');
            }
        }
        
        function exportDatabase() {
            // Simular exportaci√≥n de base de datos
            addNotification('info', 'Exportaci√≥n iniciada', 'La base de datos se est√° exportando. Esto puede tomar unos momentos...');
            
            setTimeout(() => {
                addNotification('success', 'Exportaci√≥n completada', 'La base de datos ha sido exportada correctamente.');
            }, 2000);
        }
        
        function backupDatabase() {
            // Simular respaldo de base de datos
            addNotification('info', 'Respaldo iniciado', 'Se est√° realizando un respaldo de la base de datos...');
            
            setTimeout(() => {
                addNotification('success', 'Respaldo completado', 'El respaldo de la base de datos se ha completado correctamente.');
            }, 1500);
        }
        
        function updateDatabaseStats() {
            // Simular actualizaci√≥n de estad√≠sticas de base de datos
            document.getElementById('dbTotalFaces').textContent = Math.floor(Math.random() * 100 + 50);
            document.getElementById('dbUniquePeople').textContent = Math.floor(Math.random() * 30 + 20);
            document.getElementById('dbLastUpdate').textContent = new Date().toLocaleString();
            document.getElementById('dbStorageSize').textContent = (Math.random() * 50 + 10).toFixed(1) + ' MB';
            
            const usage = Math.floor(Math.random() * 40 + 30);
            document.getElementById('dbUsageBar').style.width = usage + '%';
            document.getElementById('dbUsageValue').textContent = usage + '%';
        }
        
        // Funciones de an√°lisis avanzado
        function handleVideoFileSelect(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            const videoDisplay = document.getElementById('videoDisplay');
            const videoPlayer = document.getElementById('videoPlayer');
            
            videoPlayer.src = URL.createObjectURL(file);
            videoPlayer.style.display = 'block';
            videoDisplay.querySelector('div').style.display = 'none';
            
            document.getElementById('analyzeVideo').disabled = false;
        }
        
        function analyzeVideo() {
            const videoPlayer = document.getElementById('videoPlayer');
            if (!videoPlayer.src) {
                alert('Seleccione un video para analizar.');
                return;
            }
            
            document.getElementById('analyzeVideo').disabled = true;
            document.getElementById('stopVideoAnalysis').disabled = false;
            document.getElementById('exportVideoAnalysis').disabled = false;
            
            const resultsElement = document.getElementById('videoAnalysisResults');
            resultsElement.innerHTML = '<div style="text-align: center; padding: 20px;">üîç Analizando video...</div>';
            
            // Simular an√°lisis de video
            let progress = 0;
            const progressInterval = setInterval(() => {
                progress += 2;
                document.getElementById('videoAnalysisBar').style.width = progress + '%';
                document.getElementById('videoAnalysisText').textContent = progress + '%';
                
                // Actualizar m√©tricas
                document.getElementById('videoFacesDetected').textContent = Math.floor(progress * 5);
                document.getElementById('videoUniqueFaces').textContent = Math.floor(progress * 2);
                document.getElementById('videoAnalysisProgress').textContent = progress + '%';
                document.getElementById('videoProcessingSpeed').textContent = Math.floor(Math.random() * 10 + 15) + ' fps';
                
                if (progress >= 100) {
                    clearInterval(progressInterval);
                    
                    // Mostrar resultados
                    resultsElement.innerHTML = `
                        <div style="color: #4cc9f0; font-weight: bold; margin-bottom: 10px;">‚úÖ An√°lisis de video completado</div>
                        <div style="margin-bottom: 5px;">üìä Rostros detectados: ${Math.floor(progress * 5)}</div>
                        <div style="margin-bottom: 5px;">üë• Rostros √∫nicos: ${Math.floor(progress * 2)}</div>
                        <div style="margin-bottom: 5px;">‚ö° Tiempo de procesamiento: ${Math.floor(Math.random() * 30000 + 10000)}ms</div>
                        <div style="margin-bottom: 5px;">üíæ Memoria utilizada: ${(Math.random() * 200 + 50).toFixed(1)} MB</div>
                    `;
                    
                    document.getElementById('analyzeVideo').disabled = false;
                    document.getElementById('stopVideoAnalysis').disabled = true;
                    
                    addNotification('success', 'An√°lisis de video completado', 'El an√°lisis del video se ha completado correctamente.');
                }
            }, 100);
        }
        
        function stopVideoAnalysis() {
            // Simular detenci√≥n del an√°lisis
            document.getElementById('analyzeVideo').disabled = false;
            document.getElementById('stopVideoAnalysis').disabled = true;
            
            addNotification('warning', 'An√°lisis interrumpido', 'El an√°lisis de video ha sido interrumpido por el usuario.');
        }
        
        function exportVideoAnalysis() {
            // Simular exportaci√≥n de resultados
            addNotification('info', 'Exportando resultados', 'Los resultados del an√°lisis de video se est√°n exportando...');
            
            setTimeout(() => {
                addNotification('success', 'Exportaci√≥n completada', 'Los resultados del an√°lisis de video han sido exportados correctamente.');
            }, 1500);
        }
        
        // Funciones de an√°lisis mejoradas
        function analyzeEnhancedAttributes() {
            const fileInput = document.getElementById('attributesFileInput');
            if (!fileInput.files[0]) {
                alert('Seleccione una imagen para analizar.');
                return;
            }
            
            const resultsElement = document.getElementById('attributesResults');
            resultsElement.innerHTML = '<div style="text-align: center; padding: 20px;">üîç Analizando atributos faciales avanzados...</div>';
            
