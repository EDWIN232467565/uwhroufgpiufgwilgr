        function analyzeFaceShapeOnly() {
            const fileInput = document.getElementById('advancedFileInput');
            if (!fileInput.files[0]) {
                alert('Seleccione una imagen para an√°lisis de forma facial.');
                return;
            }
            
            const resultsElement = document.getElementById('advancedResults');
            resultsElement.innerHTML = '<div style="text-align: center; padding: 20px;">üî∑ Analizando forma facial...</div>';
            
            // Simular an√°lisis de forma facial
            setTimeout(() => {
                analyzeFaceShape();
                
                // Determinar qu√© forma visual mostrar
                let shapeVisual = '';
                if (faceShapeData.name === "Ovalada") {
                    shapeVisual = '<div class="face-shape-oval"></div>';
                } else if (faceShapeData.name === "Redonda") {
                    shapeVisual = '<div class="face-shape-round"></div>';
                } else if (faceShapeData.name === "Cuadrada") {
                    shapeVisual = '<div class="face-shape-square"></div>';
                } else {
                    shapeVisual = '<div class="face-shape-oval"></div>';
                }
                
                resultsElement.innerHTML = `
                    <div>
                        <h3 style="color: #4cc9f0; margin-bottom: 15px; text-align: center;">üî∑ An√°lisis de Forma Facial</h3>
                        
                        <div class="face-shape-visual">
                            ${shapeVisual}
                        </div>
                        
                        <div style="text-align: center; margin-bottom: 20px;">
                            <div style="font-size: 24px; font-weight: bold; color: #f72585;">${faceShapeData.name}</div>
                            <div style="font-size: 14px; color: rgba(255,255,255,0.7); margin-top: 5px;">Confianza: ${faceShapeData.confidence}%</div>
                        </div>
                        
                        <div style="background: rgba(255,255,255,0.05); padding: 15px; border-radius: 8px;">
                            <h4 style="color: #4cc9f0; margin-bottom: 10px;">üìù Descripci√≥n</h4>
                            <p style="font-size: 14px; line-height: 1.5;">${faceShapeData.description}</p>
                            
                            <div style="margin-top: 15px;">
                                <h4 style="color: #4cc9f0; margin-bottom: 10px;">üìè Proporciones</h4>
                                <div class="feature-list">
                                    <div class="feature-item">
                                        <div>Relaci√≥n largo/ancho</div>
                                        <div class="feature-value">${(Math.random() * 0.5 + 1.2).toFixed(2)}</div>
                                    </div>
                                    <div class="feature-item">
                                        <div>Ancho de p√≥mulos</div>
                                        <div class="feature-value">${Math.floor(Math.random() * 20 + 120)}px</div>
                                    </div>
                                    <div class="feature-item">
                                        <div>Ancho de mand√≠bula</div>
                                        <div class="feature-value">${Math.floor(Math.random() * 20 + 100)}px</div>
                                    </div>
                                    <div class="feature-item">
                                        <div>Longitud de rostro</div>
                                        <div class="feature-value">${Math.floor(Math.random() * 30 + 150)}px</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                addNotification('info', 'An√°lisis de forma completado', 'Se ha analizado la forma facial del rostro.');
            }, 1500);
