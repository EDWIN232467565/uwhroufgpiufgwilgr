    <script>
        // Variables globales
        let cameraStream = null;
        let isCameraActive = false;
        let faceDetectionInterval = null;
        let currentTab = 'dashboard';
        let currentSubTab = 'video';
        let notificationCount = 3;
        let faceDatabase = [];
        let selectedFaces = [];
        
        // Variables para an√°lisis avanzado
        let skinToneData = null;
        let faceShapeData = null;
        let facialSymmetryData = null;
        let textureAnalysisData = null;
        let headPoseData = null;
        
        // Inicializaci√≥n cuando el DOM est√© listo
        document.addEventListener('DOMContentLoaded', function() {
            initializeTabs();
            initializeSubTabs();
            initializeEventListeners();
            updateDashboardStats();
            loadSampleData();
            initializeNotifications();
            initializeFaceRecognition();
        });
        
        // Inicializar pesta√±as principales
        function initializeTabs() {
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const tabId = this.getAttribute('data-tab');
                    
                    // Actualizar pesta√±as
                    tabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Actualizar contenido
                    document.querySelectorAll('.tab-content').forEach(content => {
                        content.classList.remove('active');
                    });
                    document.getElementById(tabId).classList.add('active');
                    
                    currentTab = tabId;
                    
                    // Acciones espec√≠ficas por pesta√±a
                    if (tabId === 'camera' && !isCameraActive) {
                        // Preparar interfaz de c√°mara
                    } else if (tabId === 'notifications') {
                        showNotifications();
                    }
                });
            });
        }
        
        // Inicializar sub-pesta√±as
        function initializeSubTabs() {
            const subTabs = document.querySelectorAll('.sub-tab');
            subTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const subTabId = this.getAttribute('data-subtab');
                    
                    // Actualizar sub-pesta√±as
                    subTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Actualizar contenido
                    document.querySelectorAll('.sub-tab-content').forEach(content => {
                        content.classList.remove('active');
                    });
                    document.querySelector(`.sub-tab-content[data-subtab="${subTabId}"]`).classList.add('active');
                    
                    currentSubTab = subTabId;
                });
            });
        }
        
        // Inicializar event listeners
        function initializeEventListeners() {
            // C√°mara
            document.getElementById('startCamera').addEventListener('click', startCamera);
            document.getElementById('stopCamera').addEventListener('click', stopCamera);
            document.getElementById('captureFace').addEventListener('click', captureFace);
            
            // Comparaci√≥n m√∫ltiple
            document.getElementById('multiFileInput').addEventListener('change', handleMultiFileSelect);
            document.getElementById('compareMultiple').addEventListener('click', compareMultipleFaces);
            document.getElementById('clearMultiple').addEventListener('click', clearMultipleSelection);
            
            // Comparaci√≥n individual
            document.getElementById('referenceFileInput').addEventListener('change', function(e) {
                displayImage(e.target.files[0], 'referenceImageDisplay');
            });
            document.getElementById('compareFileInput').addEventListener('change', function(e) {
                displayImage(e.target.files[0], 'compareImageDisplay');
            });
            document.getElementById('compareFaces').addEventListener('click', compareFaces);
            document.getElementById('clearComparison').addEventListener('click', clearComparison);
            
            // Base de datos
            document.getElementById('addFaceFileInput').addEventListener('change', function(e) {
                displayImage(e.target.files[0], 'addFaceImageDisplay');
            });
            document.getElementById('addToDatabase').addEventListener('click', addFaceToDatabase);
            document.getElementById('loadDatabase').addEventListener('click', loadDatabase);
            document.getElementById('saveDatabase').addEventListener('click', saveDatabase);
            document.getElementById('clearDatabase').addEventListener('click', clearDatabase);
            document.getElementById('exportDatabase').addEventListener('click', exportDatabase);
            
            // An√°lisis avanzado
            document.getElementById('videoFileInput').addEventListener('change', handleVideoFileSelect);
            document.getElementById('analyzeVideo').addEventListener('click', analyzeVideo);
            document.getElementById('stopVideoAnalysis').addEventListener('click', stopVideoAnalysis);
            document.getElementById('exportVideoAnalysis').addEventListener('click', exportVideoAnalysis);
            
            document.getElementById('attributesFileInput').addEventListener('change', function(e) {
                displayImage(e.target.files[0], 'attributesImageDisplay');
            });
            document.getElementById('analyzeAttributes').addEventListener('click', analyzeEnhancedAttributes);
            document.getElementById('analyze3D').addEventListener('click', analyze3DFace);
            
            document.getElementById('emotionsFileInput').addEventListener('change', function(e) {
                displayImage(e.target.files[0], 'emotionsImageDisplay');
            });
            document.getElementById('analyzeEmotions').addEventListener('click', analyzeEmotions);
            document.getElementById('analyzeDetailedExpressions').addEventListener('click', analyzeDetailedExpressions);
            
            document.getElementById('landmarksFileInput').addEventListener('change', function(e) {
                displayImage(e.target.files[0], 'landmarksImageDisplay');
            });
            document.getElementById('analyzeLandmarks').addEventListener('click', analyzeLandmarks);
            
            // An√°lisis avanzado (nuevas funciones)
            document.getElementById('advancedFileInput').addEventListener('change', function(e) {
                displayImage(e.target.files[0], 'advancedImageDisplay');
            });
            document.getElementById('analyzeAdvanced').addEventListener('click', performAdvancedAnalysis);
            document.getElementById('analyzeSkinTone').addEventListener('click', analyzeSkinToneOnly);
            document.getElementById('analyzeFaceShape').addEventListener('click', analyzeFaceShapeOnly);
            
            // Seguridad
            document.getElementById('confidenceThreshold').addEventListener('input', function() {
                document.getElementById('confidenceThresholdValue').textContent = this.value + '%';
            });
            document.getElementById('saveSecuritySettings').addEventListener('click', saveSecuritySettings);
            
            // Notificaciones
            document.getElementById('notificationTab').addEventListener('click', showNotifications);
            document.getElementById('closeNotifications').addEventListener('click', hideNotifications);
            
            // Otros
            document.getElementById('backupNow').addEventListener('click', backupDatabase);
        }
        
        // Inicializar notificaciones
        function initializeNotifications() {
            // Agregar algunas notificaciones de ejemplo
            addNotification('info', 'Sistema iniciado', 'El sistema de reconocimiento facial se ha iniciado correctamente.');
            addNotification('warning', 'Base de datos casi llena', 'La base de datos est√° al 85% de su capacidad. Considere realizar una limpieza.');
            addNotification('danger', 'Intento de acceso no autorizado', 'Se detect√≥ un intento de acceso no autorizado en la Zona A.');
            
            updateNotificationBadge();
        }
        
        // Inicializar reconocimiento facial (simulado)
        function initializeFaceRecognition() {
            // En un sistema real, aqu√≠ se inicializar√≠a la biblioteca de reconocimiento facial
            console.log("Inicializando sistema de reconocimiento facial...");
            
            // Simular carga de base de datos de rostros
            faceDatabase = [
                { id: 1, name: "Juan P√©rez", confidence: 0.94, image: "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='100' height='100'><rect width='100' height='100' fill='%234361ee'/><text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle' font-family='Arial' font-size='24' fill='white'>JP</text></svg>" },
                { id: 2, name: "Mar√≠a Garc√≠a", confidence: 0.92, image: "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='100' height='100'><rect width='100' height='100' fill='%23f72585'/><text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle' font-family='Arial' font-size='24' fill='white'>MG</text></svg>" },
                { id: 3, name: "Carlos L√≥pez", confidence: 0.89, image: "data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='100' height='100'><rect width='100' height='100' fill='%234cc9f0'/><text x='50%' y='50%' dominant-baseline='middle' text-anchor='middle' font-family='Arial' font-size='24' fill='white'>CL</text></svg>" }
            ];
            
            addNotification('success', 'Reconocimiento facial inicializado', 'El sistema est√° listo para detectar y reconocer rostros.');
        }
        
        // Funciones de c√°mara
        function startCamera() {
            const constraints = {
                video: {
                    width: { ideal: 640 },
                    height: { ideal: 480 },
                    facingMode: 'user'
                }
            };
            
            navigator.mediaDevices.getUserMedia(constraints)
                .then(function(stream) {
                    cameraStream = stream;
                    const cameraDisplay = document.getElementById('cameraDisplay');
                    cameraDisplay.innerHTML = '<video id="videoElement" autoplay playsinline></video>';
                    cameraDisplay.classList.add('has-content');
                    
                    const videoElement = document.getElementById('videoElement');
                    videoElement.srcObject = stream;
                    
                    isCameraActive = true;
                    document.getElementById('startCamera').disabled = true;
                    document.getElementById('stopCamera').disabled = false;
                    document.getElementById('captureFace').disabled = false;
                    
                    // Simular detecci√≥n de rostros
                    startFaceDetectionSimulation();
                    
                    addNotification('info', 'C√°mara activada', 'La c√°mara se ha activado correctamente.');
                })
                .catch(function(error) {
                    console.error('Error al acceder a la c√°mara:', error);
                    alert('No se pudo acceder a la c√°mara. Aseg√∫rese de permitir el acceso a la c√°mara en su navegador.');
                });
        }
        
        function stopCamera() {
            if (cameraStream) {
                cameraStream.getTracks().forEach(track => track.stop());
                cameraStream = null;
            }
            
            isCameraActive = false;
            document.getElementById('startCamera').disabled = false;
            document.getElementById('stopCamera').disabled = true;
            document.getElementById('captureFace').disabled = true;
            
            // Detener simulaci√≥n de detecci√≥n
            if (faceDetectionInterval) {
                clearInterval(faceDetectionInterval);
                faceDetectionInterval = null;
            }
            
            const cameraDisplay = document.getElementById('cameraDisplay');
            cameraDisplay.innerHTML = '<div>Haga clic en "Iniciar C√°mara" para comenzar</div>';
            cameraDisplay.classList.remove('has-content');
            
            addNotification('info', 'C√°mara desactivada', 'La c√°mara se ha desactivado correctamente.');
        }
        
        function captureFace() {
            if (!isCameraActive) return;
            
            const videoElement = document.getElementById('videoElement');
            const canvas = document.createElement('canvas');
            canvas.width = videoElement.videoWidth;
            canvas.height = videoElement.videoHeight;
            const ctx = canvas.getContext('2d');
            ctx.drawImage(videoElement, 0, 0, canvas.width, canvas.height);
            
            // Simular an√°lisis facial
            simulateFaceAnalysis(canvas.toDataURL('image/png'));
            
            addNotification('info', 'Rostro capturado', 'Se ha capturado un rostro para an√°lisis.');
        }
        
        function startFaceDetectionSimulation() {
            // Simular detecci√≥n de rostros en tiempo real
            let faceCount = 0;
            let recognizedCount = 0;
            
            faceDetectionInterval = setInterval(() => {
                if (!isCameraActive) return;
                
                // Actualizar m√©tricas
                faceCount = Math.floor(Math.random() * 5);
                recognizedCount = Math.floor(Math.random() * (faceCount + 1));
                
                document.getElementById('facesDetected').textContent = faceCount;
                document.getElementById('facesRecognized').textContent = recognizedCount;
                document.getElementById('avgConfidence').textContent = Math.floor(Math.random() * 30 + 70) + '%';
                document.getElementById('processingSpeed').textContent = Math.floor(Math.random() * 10 + 15) + ' fps';
                
                // Actualizar indicador de spoofing
                const spoofingIndicator = document.getElementById('spoofingIndicator');
                const spoofingStatus = document.getElementById('spoofingStatus');
                
                const spoofingChance = Math.random();
                if (spoofingChance < 0.7) {
                    spoofingIndicator.className = 'spoofing-dot';
                    spoofingStatus.textContent = 'Estado: Sin actividad sospechosa';
                } else if (spoofingChance < 0.9) {
                    spoofingIndicator.className = 'spoofing-dot suspicious';
                    spoofingStatus.textContent = 'Estado: Actividad sospechosa detectada';
                } else {
                    spoofingIndicator.className = 'spoofing-dot fraud';
                    spoofingStatus.textContent = 'Estado: Posible intento de spoofing';
                }
                
                // Actualizar an√°lisis de comportamiento
                document.getElementById('blinkRate').textContent = Math.floor(Math.random() * 10 + 15) + '/min';
                document.getElementById('headMovement').textContent = ['Baja', 'Moderada', 'Alta'][Math.floor(Math.random() * 3)];
                document.getElementById('textureAnalysis').textContent = ['Normal', 'An√≥mala'][Math.floor(Math.random() * 2)];
                document.getElementById('depthAnalysis').textContent = ['Normal', 'An√≥mala'][Math.floor(Math.random() * 2)];
                
                // Actualizar resultados de an√°lisis en vivo
                const resultsElement = document.getElementById('liveAnalysisResults');
                if (faceCount > 0) {
                    let resultsHTML = `
                        <div style="color: #4cc9f0; margin-bottom: 10px;">‚úÖ ${recognizedCount} rostro(s) reconocido(s)</div>
                        <div style="color: #f72585; margin-bottom: 10px;">‚ùì ${faceCount - recognizedCount} rostro(s) desconocido(s)</div>
                        <div style="margin-bottom: 5px;">üìä Confianza promedio: ${Math.floor(Math.random() * 30 + 70)}%</div>
                        <div style="margin-bottom: 5px;">‚ö° Tiempo de procesamiento: ${Math.floor(Math.random() * 100 + 50)}ms</div>
                    `;
                    
                    // Mostrar rostros reconocidos
                    if (recognizedCount > 0) {
                        resultsHTML += `<div style="margin-top: 15px; font-weight: bold;">Rostros identificados:</div>`;
                        for (let i = 0; i < recognizedCount; i++) {
                            const randomFace = faceDatabase[Math.floor(Math.random() * faceDatabase.length)];
                            resultsHTML += `
                                <div style="display: flex; align-items: center; gap: 10px; margin: 8px 0; padding: 8px; background: rgba(255,255,255,0.05); border-radius: 6px;">
                                    <img src="${randomFace.image}" style="width: 30px; height: 30px; border-radius: 50%;">
                                    <div>
                                        <div>${randomFace.name}</div>
                                        <div style="font-size: 12px; color: rgba(255,255,255,0.7);">Confianza: ${Math.floor(Math.random() * 10 + 85)}%</div>
                                    </div>
                                </div>
                            `;
                        }
                    }
                    
                    resultsElement.innerHTML = resultsHTML;
                } else {
                    resultsElement.innerHTML = '<div style="text-align: center; padding: 20px; color: rgba(255,255,255,0.6);">Esperando detecci√≥n de rostros...</div>';
                }
            }, 1000);
        }
        
        function simulateFaceAnalysis(imageData) {
            // Simular an√°lisis facial
            const resultsElement = document.getElementById('liveAnalysisResults');
            resultsElement.innerHTML = `
                <div style="text-align: center; margin-bottom: 15px;">üîç Analizando rostro capturado...</div>
                <div class="progress-bar" style="margin-top: 10px;">
                    <div class="progress" style="width: 0%" id="analysisProgress"></div>
                </div>
            `;
            
            let progress = 0;
            const progressInterval = setInterval(() => {
                progress += 5;
                document.getElementById('analysisProgress').style.width = progress + '%';
                
                if (progress >= 100) {
                    clearInterval(progressInterval);
                    
                    // Mostrar resultados simulados
                    const isRecognized = Math.random() > 0.3;
                    const confidence = Math.floor(Math.random() * 30 + 70);
                    
                    if (isRecognized) {
                        const randomFace = faceDatabase[Math.floor(Math.random() * faceDatabase.length)];
                        
                        resultsElement.innerHTML = `
                            <div style="color: #4cc9f0; font-weight: bold; margin-bottom: 15px; font-size: 18px;">‚úÖ Rostro reconocido</div>
                            <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 15px; padding: 15px; background: rgba(255,255,255,0.05); border-radius: 10px;">
                                <img src="${randomFace.image}" style="width: 60px; height: 60px; border-radius: 50%; border: 2px solid #4cc9f0;">
                                <div>
                                    <div style="font-size: 20px; font-weight: bold;">${randomFace.name}</div>
                                    <div style="font-size: 14px; color: rgba(255,255,255,0.7);">Confianza: ${confidence}%</div>
                                </div>
                            </div>
                            <div style="margin-bottom: 10px; font-weight: bold;">üë§ Atributos detectados:</div>
                            <div style="font-size: 14px; margin-bottom: 5px;">
                                ‚Ä¢ G√©nero: ${Math.random() > 0.5 ? 'Masculino' : 'Femenino'}<br>
                                ‚Ä¢ Edad estimada: ${Math.floor(Math.random() * 30 + 20)} a√±os<br>
                                ‚Ä¢ Emoci√≥n: ${['Feliz', 'Neutral', 'Serio'][Math.floor(Math.random() * 3)]}
                            </div>
                        `;
                    } else {
                        resultsElement.innerHTML = `
                            <div style="color: #f72585; font-weight: bold; margin-bottom: 15px; font-size: 18px;">‚ùì Rostro no reconocido</div>
                            <div style="margin-bottom: 10px;">üìä Confianza: ${confidence}%</div>
                            <div style="background: rgba(247, 37, 133, 0.1); padding: 12px; border-radius: 8px; border: 1px solid rgba(247, 37, 133, 0.3);">
                                üí° Sugerencia: Agregue este rostro a la base de datos para futuras identificaciones
                            </div>
                        `;
                    }
                }
            }, 100);
        }
        
        // Funciones de comparaci√≥n m√∫ltiple
        function handleMultiFileSelect(event) {
            const fileList = event.target.files;
            const imageList = document.getElementById('multiImageList');
            imageList.innerHTML = '';
            
            if (fileList.length === 0) {
                imageList.innerHTML = '<div style="text-align: center; color: rgba(255,255,255,0.6);">No hay im√°genes seleccionadas</div>';
                return;
            }
            
            for (let i = 0; i < fileList.length; i++) {
                const file = fileList[i];
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    const imageItem = document.createElement('div');
                    imageItem.className = 'image-item';
                    imageItem.innerHTML = `
                        <div>
                            <strong>Imagen ${i+1}</strong> - ${file.name}
                        </div>
                        <div>
                            <button class="danger" data-index="${i}" style="padding: 3px 8px; font-size: 12px;">Eliminar</button>
                        </div>
                    `;
                    
                    imageList.appendChild(imageItem);
                    
                    // Agregar evento para eliminar imagen
                    imageItem.querySelector('button').addEventListener('click', function() {
                        removeImageFromMultiSelection(parseInt(this.getAttribute('data-index')));
                    });
                };
                
                reader.readAsDataURL(file);
            }
        }
        
        function removeImageFromMultiSelection(index) {
            const fileInput = document.getElementById('multiFileInput');
            const files = Array.from(fileInput.files);
            files.splice(index, 1);
            
            // Actualizar file input (no es directamente posible, necesitamos recrearlo)
            const newFileList = new DataTransfer();
            files.forEach(file => newFileList.items.add(file));
            fileInput.files = newFileList.files;
            
            // Disparar evento change para actualizar la lista
            const event = new Event('change');
            fileInput.dispatchEvent(event);
        }
        
        function compareMultipleFaces() {
            const fileInput = document.getElementById('multiFileInput');
            if (fileInput.files.length < 2) {
                alert('Seleccione al menos 2 im√°genes para comparar.');
                return;
            }
            
            const resultsElement = document.getElementById('multiComparisonResults');
            resultsElement.innerHTML = '<div style="text-align: center; padding: 20px;">üîç Comparando rostros...</div>';
            
            // Simular proceso de comparaci√≥n
            setTimeout(() => {
                // Generar matriz de similitud simulada
                const fileCount = fileInput.files.length;
                let similarityMatrix = '    ';
                
                // Encabezados
                for (let i = 0; i < fileCount; i++) {
                    similarityMatrix += `Img${i+1}  `;
                }
                similarityMatrix += '\n';
                
                // Filas
                for (let i = 0; i < fileCount; i++) {
                    similarityMatrix += `Img${i+1} `;
                    for (let j = 0; j < fileCount; j++) {
                        if (i === j) {
                            similarityMatrix += '100% ';
                        } else {
                            const similarity = Math.floor(Math.random() * 40 + 60);
                            similarityMatrix += `${similarity}%  `;
                        }
                    }
                    similarityMatrix += '\n';
                }
                
                document.getElementById('similarityMatrix').textContent = similarityMatrix;
                
                // Generar grupos de rostros similares
                const faceClusters = document.getElementById('faceClusters');
                faceClusters.innerHTML = '';
                
                const clusterCount = Math.min(3, Math.ceil(fileCount / 2));
                for (let i = 0; i < clusterCount; i++) {
                    const clusterItem = document.createElement('div');
                    clusterItem.className = 'cluster-item';
                    clusterItem.innerHTML = `
                        <div class="cluster-header">Grupo ${i+1} (Similitud > 75%)</div>
                        <div>Im√°genes: ${i+1}, ${((i+1) % fileCount) + 1}</div>
                    `;
                    faceClusters.appendChild(clusterItem);
                }
                
                // Mostrar resultados
                resultsElement.innerHTML = `
                    <div style="color: #4cc9f0; font-weight: bold; margin-bottom: 10px;">‚úÖ Comparaci√≥n completada</div>
                    <div style="margin-bottom: 5px;">üìä Se analizaron ${fileCount} im√°genes</div>
                    <div style="margin-bottom: 5px;">üë• Se identificaron ${clusterCount} grupos de rostros similares</div>
                    <div style="margin-bottom: 5px;">‚ö° Tiempo de procesamiento: ${Math.floor(Math.random() * 2000 + 1000)}ms</div>
                `;
                
                addNotification('info', 'Comparaci√≥n m√∫ltiple completada', `Se compararon ${fileCount} im√°genes y se identificaron ${clusterCount} grupos de rostros.`);
            }, 1500);
        }
        
        function clearMultipleSelection() {
            document.getElementById('multiFileInput').value = '';
            document.getElementById('multiImageList').innerHTML = '<div style="text-align: center; color: rgba(255,255,255,0.6);">No hay im√°genes seleccionadas</div>';
            document.getElementById('multiComparisonResults').innerHTML = 'Los resultados de la comparaci√≥n aparecer√°n aqu√≠';
            document.getElementById('similarityMatrix').textContent = 'La matriz de similitud aparecer√° aqu√≠ despu√©s de la comparaci√≥n';
            document.getElementById('faceClusters').innerHTML = 'Los grupos de rostros similares aparecer√°n aqu√≠';
        }
        
        // Funciones de comparaci√≥n individual
        function displayImage(file, displayElementId) {
            if (!file) return;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                const displayElement = document.getElementById(displayElementId);
                displayElement.innerHTML = `<img src="${e.target.result}" alt="Imagen seleccionada">`;
                displayElement.classList.add('has-content');
            };
            reader.readAsDataURL(file);
        }
        
        function compareFaces() {
            const referenceFile = document.getElementById('referenceFileInput').files[0];
            const compareFile = document.getElementById('compareFileInput').files[0];
            
            if (!referenceFile || !compareFile) {
                alert('Seleccione ambas im√°genes para comparar.');
                return;
            }
            
            const resultsElement = document.getElementById('comparisonResults');
            resultsElement.innerHTML = '<div style="text-align: center; padding: 20px;">üîç Comparando rostros...</div>';
            
            // Simular proceso de comparaci√≥n
            setTimeout(() => {
                const similarity = Math.floor(Math.random() * 40 + 60);
                
                // Actualizar barra de similitud
                document.getElementById('similarityBar').style.width = similarity + '%';
                document.getElementById('similarityValue').textContent = similarity + '%';
                
                // Generar caracter√≠sticas comparadas
                const featureComparison = document.getElementById('featureComparison');
                featureComparison.innerHTML = '';
                
                const features = [
                    { name: 'Distancia entre ojos', value: Math.floor(Math.random() * 20 + 80) + '%' },
                    { name: 'Forma de la nariz', value: Math.floor(Math.random() * 20 + 80) + '%' },
                    { name: 'Forma de la boca', value: Math.floor(Math.random() * 20 + 80) + '%' },
                    { name: 'Estructura facial', value: Math.floor(Math.random() * 20 + 80) + '%' },
                    { name: 'Contorno del rostro', value: Math.floor(Math.random() * 20 + 80) + '%' },
                    { name: 'Puntos de referencia', value: Math.floor(Math.random() * 20 + 80) + '%' }
                ];
                
                features.forEach(feature => {
                    const featureItem = document.createElement('div');
                    featureItem.className = 'feature-item';
                    featureItem.innerHTML = `
                        <div>${feature.name}</div>
                        <div class="feature-value">${feature.value}</div>
                    `;
                    featureComparison.appendChild(featureItem);
                });
                
                // Mostrar resultados
                let resultText = '';
                if (similarity >= 85) {
                    resultText = `<div style="color: #4cc9f0; font-weight: bold; margin-bottom: 10px;">‚úÖ Alta probabilidad de ser la misma persona</div>`;
                } else if (similarity >= 70) {
                    resultText = `<div style="color: #ff9e00; font-weight: bold; margin-bottom: 10px;">‚ö†Ô∏è Similitud moderada - podr√≠a ser la misma persona</div>`;
                } else {
                    resultText = `<div style="color: #e63946; font-weight: bold; margin-bottom: 10px;">‚ùå Baja probabilidad de ser la misma persona</div>`;
                }
                
                resultsElement.innerHTML = `
                    ${resultText}
                    <div style="margin-bottom: 5px;">üìä Similitud general: ${similarity}%</div>
                    <div style="margin-bottom: 5px;">‚ö° Tiempo de procesamiento: ${Math.floor(Math.random() * 500 + 200)}ms</div>
                `;
                
                addNotification('info', 'Comparaci√≥n individual completada', `Similitud detectada: ${similarity}%`);
            }, 1000);
        }
        
        function clearComparison() {
            document.getElementById('referenceFileInput').value = '';
            document.getElementById('compareFileInput').value = '';
            document.getElementById('referenceImageDisplay').innerHTML = 'Imagen de referencia aparecer√° aqu√≠';
            document.getElementById('compareImageDisplay').innerHTML = 'Imagen a comparar aparecer√° aqu√≠';
            document.getElementById('comparisonResults').innerHTML = 'Los resultados de la comparaci√≥n aparecer√°n aqu√≠';
            document.getElementById('similarityBar').style.width = '0%';
            document.getElementById('similarityValue').textContent = '0%';
            document.getElementById('featureComparison').innerHTML = '';
            
            document.getElementById('referenceImageDisplay').classList.remove('has-content');
            document.getElementById('compareImageDisplay').classList.remove('has-content');
        }
        
        // Funciones de base de datos
        function addFaceToDatabase() {
            const fileInput = document.getElementById('addFaceFileInput');
            const nameInput = document.getElementById('faceName');
            const tagsInput = document.getElementById('faceTags');
            const notesInput = document.getElementById('faceNotes');
            
            if (!fileInput.files[0]) {
                alert('Seleccione una imagen para agregar a la base de datos.');
                return;
            }
            
            if (!nameInput.value.trim()) {
                alert('Ingrese un nombre para el rostro.');
                return;
            }
            
            // Simular agregado a la base de datos
            const reader = new FileReader();
            reader.onload = function(e) {
                // Actualizar estad√≠sticas
                updateDatabaseStats();
                
                // Limpiar formulario
                fileInput.value = '';
                nameInput.value = '';
                tagsInput.value = '';
                notesInput.value = '';
                document.getElementById('addFaceImageDisplay').innerHTML = 'La imagen aparecer√° aqu√≠';
                document.getElementById('addFaceImageDisplay').classList.remove('has-content');
                
                addNotification('success', 'Rostro agregado', `"${nameInput.value}" ha sido agregado a la base de datos.`);
            };
            reader.readAsDataURL(fileInput.files[0]);
        }
        
