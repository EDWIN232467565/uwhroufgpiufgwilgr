        // Funciones de seguridad
        function saveSecuritySettings() {
            // Simular guardado de configuraci√≥n de seguridad
            addNotification('success', 'Configuraci√≥n guardada', 'La configuraci√≥n de seguridad ha sido actualizada.');
        }
        
        // Funciones de notificaciones
        function addNotification(type, title, message) {
            const notificationBody = document.getElementById('notificationBody');
            const notificationItem = document.createElement('div');
            notificationItem.className = 'notification-item';
            
            const iconClass = type === 'info' ? 'info' : (type === 'warning' ? 'warning' : 'danger');
            
            notificationItem.innerHTML = `
                <div class="notification-icon ${iconClass}">${type === 'info' ? 'i' : (type === 'warning' ? '!' : 'X')}</div>
                <div class="notification-content">
                    <div class="notification-title">${title}</div>
                    <div>${message}</div>
                    <div class="notification-time">${new Date().toLocaleTimeString()}</div>
                </div>
            `;
            
            notificationBody.insertBefore(notificationItem, notificationBody.firstChild);
            
            // Actualizar contador de notificaciones
            notificationCount++;
            updateNotificationBadge();
            
            // Mostrar notificaci√≥n temporal si el panel no est√° visible
            if (currentTab !== 'notifications') {
                showTemporaryNotification(type, title, message);
            }
        }
        
        function showTemporaryNotification(type, title, message) {
            // Crear notificaci√≥n temporal
            const tempNotification = document.createElement('div');
            tempNotification.className = `alert alert-${type === 'info' ? 'info' : (type === 'warning' ? 'warning' : 'danger')}`;
            tempNotification.style.position = 'fixed';
            tempNotification.style.top = '20px';
            tempNotification.style.right = '20px';
            tempNotification.style.zIndex = '1001';
            tempNotification.style.minWidth = '300px';
            tempNotification.style.maxWidth = '400px';
            tempNotification.innerHTML = `
                <strong>${title}</strong><br>
                ${message}
            `;
            
            document.body.appendChild(tempNotification);
            
            // Eliminar despu√©s de 5 segundos
            setTimeout(() => {
                if (document.body.contains(tempNotification)) {
                    document.body.removeChild(tempNotification);
                }
            }, 5000);
        }
        
        function showNotifications() {
            document.getElementById('notificationPanel').style.display = 'block';
            document.getElementById('notificationBadge').textContent = '0';
            notificationCount = 0;
        }
        
        function hideNotifications() {
            document.getElementById('notificationPanel').style.display = 'none';
        }
        
        function updateNotificationBadge() {
            document.getElementById('notificationBadge').textContent = notificationCount;
        }
        
        // Funciones de dashboard
        function updateDashboardStats() {
            // Simular actualizaci√≥n de estad√≠sticas del dashboard
            document.getElementById('todayFaces').textContent = Math.floor(Math.random() * 50 + 100);
            document.getElementById('todayMatches').textContent = Math.floor(Math.random() * 30 + 70);
            document.getElementById('activeAlerts').textContent = Math.floor(Math.random() * 5);
            document.getElementById('systemAccuracy').textContent = (Math.random() * 5 + 92).toFixed(1) + '%';
            
            document.getElementById('totalFaces').textContent = Math.floor(Math.random() * 1000 + 500);
            document.getElementById('totalMatches').textContent = Math.floor(Math.random() * 800 + 200);
            document.getElementById('accuracyRate').textContent = (Math.random() * 5 + 92).toFixed(1) + '%';
            document.getElementById('processingTime').textContent = Math.floor(Math.random() * 50 + 20) + 'ms';
            
            const systemLoad = Math.floor(Math.random() * 40 + 30);
            document.getElementById('systemLoad').style.width = systemLoad + '%';
            document.getElementById('systemLoadText').textContent = systemLoad + '%';
            
            const storageUsage = Math.floor(Math.random() * 40 + 50);
            document.getElementById('storageUsage').style.width = storageUsage + '%';
            document.getElementById('storageUsageText').textContent = storageUsage + '%';
            
            document.getElementById('avgAttention').textContent = Math.floor(Math.random() * 30 + 70) + '%';
            document.getElementById('avgEmotion').textContent = ['Feliz', 'Neutral', 'Serio'][Math.floor(Math.random() * 3)];
            document.getElementById('detectionRate').textContent = (Math.random() * 5 + 95).toFixed(1) + '%';
            document.getElementById('spoofingAttempts').textContent = Math.floor(Math.random() * 5);
        }
        
        // Cargar datos de ejemplo
        function loadSampleData() {
            // Simular carga de datos de ejemplo
            updateDashboardStats();
        }
